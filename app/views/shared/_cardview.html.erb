<%= link_to activity_path(activity) do %>
  <section>
    <div class="cards">
    <% if activity.image.nil? %>
      <div class="top test" style="background-image: url('https://source.unsplash.com/random/?activity8&auto=format&fit=crop&w=2070&q=80')"></div>
    <% else %>
    <div class="top test" style="background-image: url('<%= activity.image %>')"></div>
    <% end %>
      <div class="bottom">
        <div class="card-infos">
            <div class="cont-info">
            <h2><%= activity.summary %></h2>
            <p><i class="fas fa-star"></i>
              <%= Review.where(activity_id: activity.id).empty? ? 3.0 : Review.where(activity_id: activity.id).average(:ratings).round(1) %>
            </p>
            </div>
            <h4 class="card-address"><%= activity.address %></h4>
            <h2 class="card-pricing"><%= activity.price %> â‚¬ </h2>
        </div>
      </div>
    </div>
  </section>
<% end %>


