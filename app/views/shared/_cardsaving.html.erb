<section>
    <% if saving.activity.image.nil? %>
      <% image = 'https://images.unsplash.com/photo-1593739742226-5e5e2fdb1f1c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80' %>
    <% else %>
      <% image = saving.activity.image %>
    <% end %>
      <div class="card-saving">
        <div class="saving-left">
        <%= link_to activity_path(saving.activity) do %>
          <img src= '<%= image%>'/>
        <% end %>
        </div>
        <div class="card-saving-infos">
        <%= link_to activity_path(saving.activity) do %>
          <%= saving.activity.summary %>
        <% end %>
          <br>
            <%= saving.activity.address %>
          <br>
            <%= saving.attendance %>
          <br>
            <% if current_user == saving.user %>
            <button class="btn btn-primary submit-post-btn"><%= link_to "Update Attendance", saving_path(saving),method: :patch, data: {confirm: "Are you sure?"} %></button>
            <button class="btn"><%= link_to saving_path(saving),method: :delete, data: {confirm: "Are you sure?"} do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
            </svg>
            <% end %>
            </button>
            <% end %>
        </div>
      </div>
    </section>

<%# z-index: 10; %>
