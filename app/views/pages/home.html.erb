<div class="banner">
  <div class="container-banner-left">
    <h2>Browse For New Activities Nearby</h2>
    <%= link_to "Show all Activities", activities_path %>
  </div>
  <div class="container-banner-right">
    <%= image_tag("banner1.svg", :class => "banner-img") %>
  </div>
</div>
<div class="works">
<button type="button" class="hiw">How it works</button>
<h2>Easy step to find new experiences</h2>
<p>Create new and unforetable adventures</p>
</div>
<div class="steps-container">
  <div class="step">
    <%= image_tag("destination.svg") %>
    <h4>Enter location</h4>
  </div>
  <div class="step">
    <%= image_tag("search.svg") %>
    <h4>Choose an activity</h4>
    </div>
  <div class="step">
    <%= image_tag("enjoy.svg") %>
    <h4>Enjoy</h4>
  </div>
</div>

  <div class="left-top">
    <h2>Top Rated Activities</h2>
  </div>
  <div class="right-top">
    <div class="swiper">
  <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      <!-- Slides -->
      <% @activities.each do |activity| %>
        <div class="swiper-slide"> <%= render 'shared/cardview', activity: activity %></div>
      <% end %>
    </div>
    <!-- If we need pagination -->
    <div class="swiper-pagination"></div>

    <!-- If we need navigation buttons -->
    <%# <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div> %>

    <!-- If we need scrollbar -->
    <%# <div class="swiper-scrollbar"></div> %>
    </div>

  </div>
</div>
<div class="container-index">
  <!-- Slider main container -->
<%=  render 'shared/footer' %>
